<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <TableRow
        android:id="@+id/row1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:inputType="numberDecimal"
            android:text="Bill Total:"
            android:gravity="right"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2" />


        <EditText
            android:id="@+id/iniBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_span="2"
            android:text="0.00">

        </EditText>


    </TableRow>

    <TableRow
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="20dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tenpertxt"
            android:layout_column="2"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="10%"
            android:textSize="20sp"

            >

        </TextView>

        <TextView
            android:id="@+id/fifteenpertxt"
            android:layout_column="3"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="15%"
            android:textSize="20sp"

            >

        </TextView>

        <TextView
            android:id="@+id/twentypertxt"
            android:layout_column="4"
            android:layout_width="100dp"
            android:gravity="center"
            android:text="20%"
            android:textSize="20sp"

            >

        </TextView>

        </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/tip"
            android:layout_column="1"
            android:layout_width="100dp"
            android:gravity="right"
            android:text="Tip"
            android:textSize="20sp"
            > </TextView>

        <TextView
            android:id="@+id/tip10"
            android:layout_column="2"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>

        <TextView
            android:id="@+id/tip15"
            android:layout_column="3"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>

        <TextView
            android:id="@+id/tip20"
            android:layout_column="4"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>
    </TableRow>

    <TableRow
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >
        <TextView
            android:id="@+id/Total"
            android:layout_column="1"
            android:layout_width="100dp"
            android:gravity="right"
            android:text="Total"
            android:textSize="20sp"
            > </TextView>

        <TextView
            android:id="@+id/tot10"
            android:layout_column="2"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>

        <TextView
            android:id="@+id/tot15"
            android:layout_column="3"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>

        <TextView
            android:id="@+id/tot20"
            android:layout_column="4"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>


    </TableRow>


    <TableRow
        android:id="@+id/row5"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/custom"
            android:layout_column="1"
            android:gravity="right"
            android:text="Custom"
            android:textSize="20sp"
            > </TextView>

        <SeekBar
            android:id="@+id/customseek"
            android:layout_height="match_parent"
            android:layout_span="2"
            android:max="100"
            android:progress="18"
            >

        </SeekBar>

        <TextView
            android:id="@+id/tipPercentage"
            android:layout_column="4"
            android:text="18%"
            android:gravity="center"
            android:textSize="20sp"
            > </TextView>

    </TableRow>

    <TableRow
        android:id="@+id/row6"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        >

        <TextView
            android:id="@+id/tiptotal"
            android:layout_column="1"
            android:gravity="right"
            android:text="Tip"
            android:textSize="20sp"
            > </TextView>

        <TextView
            android:id="@+id/totaltip"
            android:layout_column="2"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>

        <TextView
            android:id="@+id/totalwithtip"
            android:layout_column="3"
            android:gravity="right"
            android:text="Total"
            android:textSize="20sp"
            > </TextView>

        <TextView
            android:id="@+id/totalprice"
            android:layout_column="4"
            android:gravity="center"
            android:textSize="20sp"
            android:text="0.00"
            > </TextView>


    </TableRow>


</TableLayout>